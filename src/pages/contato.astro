---
import Layout from "../layouts/Layout.astro";
---

<Layout>
    <main
        class="min-h-screen bg-gray-900 flex flex-col justify-center items-center py-10"
    >
        <form
            class="pt-7 bg-gray-600/25 max-w-5xl flex flex-col justify-center items-center gap-3 py-15 sm:p-15 rounded-4xl text-gray-300"
        >
            <h1 class="font-light text-3xl m-6 bg-gradient-to-r from-gray-300 via-gray-500 to-gray-300 bg-[length:300%_100%] bg-clip-text text-transparent shimmer-text">
                Formulário de Contato
            </h1>
            <input
                type="text"
                id="name"
                name="name"
                placeholder="Digite seu nome"
                class="w-xs sm:w-100 p-3 rounded mb-4 border-b-[0.5px] focus:outline-0 focus:bg-gray-600/70"
                required
            />
            <input
                type="email"
                id="email"
                name="email"
                placeholder="Digite seu e-mail"
                class="w-xs sm:w-100 p-3 rounded mb-4 border-b-[0.5px] focus:outline-0 focus:bg-gray-600/70" 
                required
            />
            <textarea
                id="message"
                name="message"
                placeholder="Digite sua mensagem"
                class="w-xs sm:w-100 p-3 rounded mb-4 border-b-[0.5px] focus:outline-0 focus:bg-gray-600/70"
                rows="5"
                required></textarea>
            <button
                id="submit-button"
                type="submit"
                class="w-xs sm:w-100 p-2 bg-gray-200 text-black hover:bg-gray-600 hover:text-white transition-all duration-300 rounded-xl"
            >
                Enviar
            </button>
        </form>
    </main>
</Layout>
<script>
    const nameInput = document.querySelector("#name") as HTMLInputElement;
    const emailInput = document.querySelector("#email") as HTMLInputElement;
    const messageInput = document.querySelector("#message") as HTMLTextAreaElement;
    const submitButton = document.querySelector("#submit-button") as HTMLButtonElement;

    const handleSubmit = (event: Event) => {
        event.preventDefault();
        const name = nameInput.value;
        const email = emailInput.value;
        const message = messageInput.value;

        if (!name || !email || !message) {
            alert("Por favor, preencha todos os campos.");
            return;
        }
        console.log("Formulário enviado:", { name, email, message });
        alert("Formulário enviado com sucesso!");

        nameInput.value = "";
        emailInput.value = "";
        messageInput.value = "";
    };

    submitButton.addEventListener("click", handleSubmit);
